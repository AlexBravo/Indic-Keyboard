                latin:keyLabel="&#x0B89;" />
            <Key
                latin:keyLabel="&#x0B8E;" />
            <Key
                latin:keyLabel="&#x0BC6;" />
            <Key
                latin:keyLabel="&#x0B94;" />
            <Key
                latin:keyLabel="&#x0B85;" />
         </default>
    </switch>
